<% provide :title, " - #{@profile.nickname_to_username}" %>

<div class="container">
    <div class="profile">
        <header class="profile-header">
            <div class="introduction">
                <h2>
                    <%= image_tag @profile.avatar.url, class:"profile_avatar" %>
                    <%= @profile.nickname_to_username %>
                    <h4><%= @profile.username? %></h4>
                    <h3><%= simple_format(@profile.introduction) %></h3>
                </h2>
            </div>
        </header>

        <hr>

        <div class="row">
            <div class="col-lg-12">
                <h3 >投稿したアイデア</h3>
            </div>
        </div>

        <div class="row">
            <% @articles.each do |article| %>
              <%= render partial: "my_article", locals: { article: article } %>
            <% end %>
        </div>
        <div class="kaminari">
            <%= paginate(@articles) %>
        </div>
    </div>
</div>

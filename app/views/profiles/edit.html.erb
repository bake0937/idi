<% provide :title, " - プロフィール設定" %>
<div class="container">
  <div class="row">

    <%= render partial: 'common/sidebar' %>

    <div class="col-sm-9 col-md-9">
      <div class="panel panel-default ">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-user"></span>プロフィール設定
        </div>
        <div class="panel-body">

        <%= form_for @profile do |f| %>

          <div class="form-group">
            <div class="col-lg-6">プロフィール画像
              <%= f.file_field :avatar %>
            </div>
            <div class="col-lg-6">ニックネーム
              <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
            </div>
            <div class="col-lg-6">一言どうぞ
              <%= f.text_field :introduction, placeholder: "一言どうぞ", class: "form-control" %>
            </div>

            <div class="col-lg-6"><br />
              <%= f.submit "保存", class: "btn btn-primary withripple" %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

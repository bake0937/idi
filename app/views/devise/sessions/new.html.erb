<% provide :title, " - Sign in" %>
<div class="container">
  <!-- ロゴを表示 -->
  <%= render partial: 'common/login_logo' %>
  <div class="row">
    <div class="col-md-6">
      <h1 class='<%= "#{controller.controller_name}-h1" %>'>iDi(アイディ)へようこそ!</h1>
      <h2 class='<%= "#{controller.controller_name}-h2" %>'>iDi(intermediate Development ideas)は、こんなサービス作ってみたい!っていう人のためのアイデア投稿サービスです</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 col-md-offset-6">
      <div class="signin-signup-panel">
        <div class="panel panel-default">
          <div class="panel-heading">
            <span class="glyphicon glyphicon-lock"></span> Sign in
          </div>

          <div class="panel-body">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <!-- フラッシュメッセージ -->
              <% if alert %>
              <p class='alert alert-danger'><%= alert %></p>
              <% end %>

              <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">ユーザー名</label>
                <div class="col-sm-9">

                  <%#= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'input form-control' %>
                  <%= f.text_field :login, autofocus: true, placeholder: 'ユーザー名またはEmail', class: 'input form-control' %>

                </div>
              </div>

              <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">

                  <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'input form-control' %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
              <div class="col-sm-offset-1 col-sm-11">
                <div class='checkbox'>
                  <label>
                    <input id='user_remember_me' name='user[remember_me]' type='checkbox' value='1'>
                    <%= f.label :remember_me, 'ログイン情報を記憶する', class: 'memory-check' %>
                  </label>
                </div>
              </div>
              <% end %>

              <div class="form-group last">
                <div class="form-group last">
                  <div class="col-sm-offset-3 col-sm-9">
                    <%= f.submit class: 'btn btn-success btn-sm', value: 'Sign in' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="panel-footer">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
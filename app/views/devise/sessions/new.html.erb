<% provide :title, " - Sign in" %>
<div class="container">
  <!-- ロゴを表示 -->
  <%= render partial: 'common/login_logo' %>
  <div class="row">
    <div class="col-md-6">
      <h1 class='<%= "#{controller.controller_name}-h1" %>'>iDi(アイディ)へようこそ!</h1>
      <h2 class='<%= "#{controller.controller_name}-h2" %>'>iDi(intermediate Development ideas)は、こんなサービス作ってみたい!っていう人のためのアイデア投稿サービスです</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 col-md-offset-7">
      <div class="signin-signup-panel">
        <div class="panel panel-default">
          <div class="panel-heading">
            <span class="glyphicon glyphicon-lock"></span> Sign in
          </div>

          <div class="panel-body">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <!-- フラッシュメッセージ -->
              <% if alert %>
                <p class='alert alert-danger'><%= alert %></p>
              <% end %>

              <div class="form-group">
                <div class="col-sm-12 sign-in-up-form_item">
                  <label for="inputEmail3"">ユーザー名</label>
                  <%= f.text_field :login, autofocus: true, placeholder: 'ユーザー名またはEmail', class: 'input form-control' %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-12 sign-in-up-form_item">
                  <label for="inputPassword3">パスワード</label>
                  <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード', class: 'input form-control' %>
                </div>
              </div>

              <div class="form-group last">
                <div class="form-group last">
                <div class="col-sm-12">
                    <%= f.submit class: 'btn btn-success btn-sm sign-in-up-btn', value: 'Sign in' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="panel-footer">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
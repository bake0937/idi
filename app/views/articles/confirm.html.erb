<% provide :title, " - #{@article.title} " %>
<div class="container">
    <div class="article">
        <div class="row">

            <div class="col-lg-12">

              <%= form_for @article do |f| %>

              <div class="confirm text-center">
                <h1>入力の確認</h1>
                <h1>以下の内容で投稿します</h1>
              </div>
                <hr>

                <h1><%= @article.title %></h1>
                <%= f.hidden_field :title %>

                <p class="lead">
                    投稿者:<%= @article.user.profile.nickname_to_username %>
                </p>

                <hr>

                イメージ画像(モックアップ、設計図など)
                <%= image_tag @article.figure.url, class:"image-preview-article" %>
                <%= f.hidden_field :figure %>
                <hr>

                <p class="lead">開発するアプリケーション<%= simple_format(add_glyphicon_to_category(@article)) %></p>
                <%= f.hidden_field :category %>
                <hr>

                <p class="lead">サービス内容<%= simple_format(@article.detail) %></p>
                <%= f.hidden_field :detail %>
                <hr>

                <p class="lead">このサービスをやろうとおもったきっかけ<%= simple_format(@article.cue) %></p>
                <%= f.hidden_field :cue %>
                <hr>

                <p class="lead">実装したい重要な機能<%= simple_format(@article.feature) %></p>
                <%= f.hidden_field :feature %>
                <hr>

                <p class="lead">重点的に力をいれてみたいポイント<%= simple_format(@article.point) %></p>
                <%= f.hidden_field :point %>
                <hr>

                <p class="lead">皆さんへのメッセージ<%= simple_format(@article.remark) %></p>
                <%= f.hidden_field :remark %>
                <hr>

                <div class="actions">
                  <%= f.submit '投稿',class:"btn btn-primary pull-right preview-button" %>
                </div>
                <div class="actions">
                  <%= f.submit '戻る', name: 'back',class:"btn btn-primary pull-right preview-button"  %>
                </div>

              <% end %>
            </div>
        </div>
    </div>
</div>
